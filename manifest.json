{
    "manifest_version": 2,
    "name": "Stop Smooth Scrolling",
    "version": "0.4",

    "description": "Stop smooth scrolling",
    "icons": {
        "128": "mouse_wheel-128.png"
    },

    "content_scripts": [
        {
            "matches": ["*://*/*"],
            "js": ["src/content.js"],
            "run_at": "document_start"
        }
    ],
    "options_page": "src/options.html",
    "permissions": [
        "http://*/*",
        "https://*/*",
        "storage"
    ]
}
